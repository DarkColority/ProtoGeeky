@model IEnumerable<Geeky.Web.Data.Entities.Tematica>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@if (this.User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
               
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="card text-center">                                 
                                <div class="card-body">
                                    <div class="font-icon-detail">
                                         
                                <img class="card-image-ev"src="@Url.Content(item.ImageURL)" alt="Image" />
                            
                                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Nombre)</h5>
                                    
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Ver más</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
    
                                    